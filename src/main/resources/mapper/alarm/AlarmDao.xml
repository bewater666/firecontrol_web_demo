<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.orient.firecontrol_web_demo.dao.alarm.AlarmDao">

    <insert id="insert">
        INSERT INTO tb_alarm (devicecode,alarmtime,alarmdetail,alarmgrade,ishandler)
        VALUES (#{deviceCode},#{alarmTime},#{alarmDetail},#{alarmGrade},#{isHandler})
    </insert>

    <update id="updateStatus">
        UPDATE tb_alarm SET ishandler  = #{isHandler} WHERE devicecode = #{deviceCode}
    </update>

    <select id="findOne" resultType="com.orient.firecontrol_web_demo.model.alarm.AlarmInfo">
        SELECT devicecode,alarmtime,alarmdetail,alarmgrade,ishandler FROM tb_alarm
        WHERE devicecode = #{devicecode}
    </select>

    <select id="findAll" resultType="com.orient.firecontrol_web_demo.model.alarm.AlarmInfo">
        SELECT id,devicecode,alarmtime,alarmdetail,alarmgrade,ishandler FROM tb_alarm
    </select>

    <select id="findHasHandler" resultType="com.orient.firecontrol_web_demo.model.alarm.AlarmInfo">
        SELECT id,devicecode,alarmtime,alarmdetail,alarmgrade,ishandler FROM tb_alarm
        WHERE ishandler = '已处理'
    </select>

    <select id="findHandlerBad" resultType="com.orient.firecontrol_web_demo.model.alarm.AlarmInfo">
        SELECT id,devicecode,alarmtime,alarmdetail,alarmgrade,ishandler FROM tb_alarm
        WHERE ishandler = '处理失败'
    </select>
    <select id="findUnHandler" resultType="com.orient.firecontrol_web_demo.model.alarm.AlarmInfo">
        SELECT id,devicecode,alarmtime,alarmdetail,alarmgrade,ishandler FROM tb_alarm
        WHERE ishandler = '未处理'
    </select>
</mapper>